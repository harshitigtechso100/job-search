<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add New</title>
    <link href="/style.css" rel="stylesheet" type="text/css" />
    <%- include('./partials/head') %>
</head>
<body>
    <%- include('./partials/nav') %> 
    <div class="addNewBook mt-4" >
        <form action="/job/add" method="post" style="
        border: 1px solid black;
        border-radius: 10px;
        width: 30%;
        height: auto;
        padding: 20px;
        background-color: antiquewhite;
        ">
            <div class="form-group formCustom">
              <label for="book">Titel</label>
              <input type="text" class="form-control" id="Titel" name="Titel">
            </div>
            <div class="form-group formCustom">
                <label for="auther">Company</label>
                <input type="text" class="form-control" id="Company" name="Company">
            </div>
            <div class="form-group formCustom">
                <label for="genres">Location</label>
                <input type="text" class="form-control" id="Location"  name="Location">
            </div>
            <div class="form-group formCustom">
                <label for="genres">Salary</label>
                <input type="text" class="form-control" id="Salary"  name="Salary">
            </div>
            <div class="form-group formCustom">
              <label for="description">Job Description</label>
              <textarea class="form-control" id="jobpost" name="jobpost" rows="3"></textarea>
            </div>
            <div class="form-group formCustom">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </form>
    </div>
    
    <%- include('./partials/scripts') %>
</body>
</html>